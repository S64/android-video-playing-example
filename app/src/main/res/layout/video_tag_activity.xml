<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LayerType: "
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/layerType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="`android:hardwareAccelerated`: "
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/activityHwaFlag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/webViewContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <Button
            android:id="@+id/addWebView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add WebView"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/visibleProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="progress: visible"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/invisibleProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="progress: invisible"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/goneProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="progress: gone"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/scriptEditor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="4"
            tools:ignore="Autofill,LabelFor,TextFields" />

        <Button
            android:id="@+id/executeJs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Execute js"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>